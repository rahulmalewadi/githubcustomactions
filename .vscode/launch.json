    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "debug Jest Tests",
            "args": [
                "--inspect-brk",
                "${workspaceRoot}/node_module/.bin/jest",
                "--runInBand",
                "--config",
                "${workspaceRoot}/jest.config.js"
            ],
            "windows": {
                "args": [
                    "--inspect-brk",
                    "${workspaceRoot}/node_module/jest/bin/jest.js",
                    "--runInBand",
                    "--config",
                    "${workspaceRoot}/jest.config.js"
                ]
            }
        }
    ]
}